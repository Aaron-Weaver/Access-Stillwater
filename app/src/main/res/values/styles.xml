<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="logo_text">
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/white</item>
        <!--<item name="android:textStyle">bold</item>-->
    </style>
    
    <style name="login_edit_text" parent="Theme.AppCompat.Light">
        <item name="android:layout_gravity">center</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textColor">@color/white</item>
        <item name="colorControlNormal">@color/gray</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/white</item>
        <!-- Don't add padding, it ruins the error messages for some reason -->
        <item name="android:layout_marginLeft">@dimen/login_edit_text_margin</item>
        <item name="android:layout_marginRight">@dimen/login_edit_text_margin</item>
    </style>

    <style name="button_material_primary" parent="Theme.AppCompat.Light">
        <item name="android:colorControlHighlight">@color/colorPrimary</item>
        <item name="android:colorButtonNormal">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/colorTextIcons</item>
        <item name="android:layout_marginLeft">@dimen/login_edit_text_margin</item>
        <item name="android:layout_marginRight">@dimen/login_edit_text_margin</item>
    </style>

    <style name="logo_text_xl">
        <item name="android:textSize">34sp</item>
        <item name="android:textColor">@color/colorTextIcons</item>
    </style>

    <style name="logo_text_lg">
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/colorTextIcons</item>
    </style>

    <style name="logo_text_md">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorTextIcons</item>
    </style>

    <style name="logo_text_sm">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorTextIcons</item>
    </style>

    <style name="loading_theme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@style/loading_background</item>
        <item name="android:textColorPrimary">@color/colorTextIcons</item>
    </style>

    <style name="primary_text_xl">
        <item name="android:textSize">34sp</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <style name="primary_text_lg">
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <style name="primary_text_md">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <style name="primary_text_sm">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <style name="secondary_text_xl">
        <item name="android:textSize">34sp</item>
        <item name="android:textColor">@color/colorSecondaryText</item>
    </style>

    <style name="secondary_text_lg">
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/colorSecondaryText</item>
    </style>

    <style name="secondary_text_md">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorSecondaryText</item>
    </style>

    <style name="secondary_text_sm">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorSecondaryText</item>
    </style>

    <style name="RateBarSmall" parent="Widget.AppCompat.RatingBar" >
        <item name="android:progressDrawable">@drawable/ic_rating</item>
        <item name="android:numStars">5</item>
        <item name="android:stepSize">1</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">16dp</item>
        <item name="android:layout_marginLeft">4dip</item>
    </style>

    <style name="loading_background">
        <item name="android:bottomBright">@color/colorPrimary</item>
        <item name="android:bottomDark">@color/colorPrimary</item>
        <item name="android:bottomMedium">@color/colorPrimary</item>
        <item name="android:centerBright">@color/colorPrimary</item>
        <item name="android:centerDark">@color/colorPrimary</item>
        <item name="android:centerMedium">@color/colorPrimary</item>
        <item name="android:topDark">@color/colorPrimary</item>
        <item name="android:fullBright">@color/colorPrimary</item>
        <item name="android:fullDark">@color/colorPrimary</item>
        <item name="android:topBright">@color/colorPrimary</item>
    </style>

    <style name="toolbar_style">
        <item name="android:textColorPrimary">@color/colorTextIcons</item>
        <item name="android:textColorSecondary">@color/colorTextIcons</item>
        <item name="actionMenuTextColor">@color/colorTextIcons</item>
    </style>

    <style name="filter_category_block">
        <item name="android:background">@color/colorAccent</item>
    </style>

</resources>
