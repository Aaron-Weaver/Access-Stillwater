<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/review_card_view"
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/review_image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"/>

            <TextView
                android:id="@+id/establishment_title_text"
                android:layout_toRightOf="@id/review_image"
                android:layout_alignTop="@id/review_image"
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Establishment"
                style="@style/primary_text_sm"
                />

            <TextView
                android:id="@+id/review_title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/establishment_title_text"
                android:layout_toRightOf="@id/review_image"
                android:layout_alignLeft="@id/establishment_title_text"
                style="@style/primary_text_lg"
                android:text = "Review title"/>

            <LinearLayout
                android:id="@+id/linear_star_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/review_title_text"
                android:layout_alignLeft="@id/establishment_title_text"
                android:layout_toRightOf="@id/review_image"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/review_star_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_blank_star"/>

                <ImageView
                    android:id="@+id/review_star_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_blank_star"/>

                <ImageView
                    android:id="@+id/review_star_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_blank_star"/>

                <ImageView
                    android:id="@+id/review_star_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_blank_star"/>

                <ImageView
                    android:id="@+id/review_star_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_blank_star"/>

            </LinearLayout>

            <TextView
                android:id="@+id/review_content_preview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/linear_star_layout"
                android:layout_alignLeft="@id/linear_star_layout"
                android:layout_marginTop="5dp"
                android:layout_marginRight="40dp"
                style="@style/secondary_text_md"
                android:text="Lorem ipsom dolor"
                android:singleLine="true"
                android:ellipsize="end"
                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>