<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/physical_disability_filter"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.33"
        android:background="@color/colorPrimary"
        android:paddingTop="30dp"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/filter_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_physical_disability_white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/filter_image"
            android:layout_centerHorizontal="true"
            style="@style/logo_text_lg"
            android:text="physical"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/visual_disability_filter"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.33"
        android:background="@color/colorAccent"
        android:paddingTop="30dp"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@id/filter_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_visual_disability_white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/filter_image"
            android:layout_centerHorizontal="true"
            style="@style/logo_text_lg"
            android:text="visual"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/audio_disability_filter"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.33"
        android:background="#F06292"
        android:paddingTop="30dp"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@id/filter_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_auditory_disability_white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/filter_image"
            android:layout_centerHorizontal="true"
            style="@style/logo_text_lg"
            android:text="auditory"/>

    </RelativeLayout>

</LinearLayout>